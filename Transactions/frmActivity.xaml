        </Grid>
        <Grid Grid.Column="1" Margin="1,15,-1,10">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ig:XamGrid x:Name="grdData" Margin="0,6,0,0"/>
        </Grid>
    </Grid>
</controls:ChildWindow>